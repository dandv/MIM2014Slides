template(name='contribs')
  +HeaderFooterLayout size='[undefined, undefined]'
    +Surface size='[undefined, 100]' target='header'
      h2 UseAccounts
    +Surface proportions='[0.75, .9]' align='[.5, .45]' origin='[.5, .5]' target='content'
      h1 A Big Thank You to all contributors:
      p &nbsp;
      p &nbsp;
      .ui.center.aligned.five.column.relaxed.grid
        each contrib_rows
          .row
            each contributors
              .column
                  .item
                    img.gravatar_small(src='{{avatar_url}}')
                    .content
                      .header
                        a(href='{{html_url}}') {{login}}
      //
        .ui.left.aligned.segment
          .ui.small.celled.list
            each contributors
              .item
                img.gravatar_small(src='{{avatar_url}}')
                .content
                  .header {{login}}
                  a(href='{{url}}') {{url}}
      //
        .ui.items
          each contributors
            .item
              .image
                img.gravatar(src='{{avatar_url}}')
              .content
                .name
                  {{login}}
                a(href='{{url}}') {{url}}
                .extra
                  {{contributions}} contributions
    +Surface size='[undefined, 70]' target='footer'
      p @splendido

